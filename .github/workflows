name: Create Release

on:
  push:
    tags:
      - 'v*'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Create tar archive
        run: |
          tar -czf main.tar.gz --exclude='.git' --exclude='.github' .

      - name: Create Release
        id: create_release
        uses: softprops/action-gh-release@v1
        with:
          files: main.tar.gz
          token: ${{ secrets.GITHUB_TOKEN }}
          draft: false
          prerelease: false
          generate_release_notes: true
